<%- include('../partials/head') %>
<body class="bg-gray-50">
  <%- include('../partials/admin-navbar') %>

  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <%- include('../partials/messages') %>

    <h1 class="text-3xl font-bold text-gray-800 mb-8">
      <i class="fas fa-tachometer-alt mr-2"></i> Admin Dashboard
    </h1>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
      <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-gray-500 text-sm">Total Books</p>
            <p class="text-3xl font-bold text-blue-600"><%= bookCount %></p>
          </div>
          <i class="fas fa-book text-blue-600 text-4xl"></i>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-gray-500 text-sm">Total Users</p>
            <p class="text-3xl font-bold text-green-600"><%= userCount %></p>
          </div>
          <i class="fas fa-users text-green-600 text-4xl"></i>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-gray-500 text-sm">Categories</p>
            <p class="text-3xl font-bold text-purple-600"><%= categoryCount %></p>
          </div>
          <i class="fas fa-th-large text-purple-600 text-4xl"></i>
        </div>
      </div>
    </div>

    <!-- Recent Books -->
    <div class="bg-white rounded-lg shadow-md p-6">
      <h2 class="text-xl font-bold text-gray-800 mb-4">
        <i class="fas fa-clock mr-2"></i> Recent Books
      </h2>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Title</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Author</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Year</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Added</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% if (recentBooks && recentBooks.length > 0) { %>
              <% recentBooks.forEach(book => { %>
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap"><%= book.title %></td>
                  <td class="px-6 py-4 whitespace-nowrap"><%= book.author %></td>
                  <td class="px-6 py-4 whitespace-nowrap"><%= book.publishYear %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= new Date(book.createdAt).toLocaleDateString() %>
                  </td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="4" class="px-6 py-4 text-center text-gray-500">No recent books</td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </main>

  <script src="/js/main.js"></script>
</body>
</html>
