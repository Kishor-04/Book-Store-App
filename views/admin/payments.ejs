<%- include('../partials/head') %>
<body class="bg-gray-50">
  <%- include('../partials/admin-navbar') %>

  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <%- include('../partials/messages') %>

    <h1 class="text-3xl font-bold text-gray-800 mb-8">
      <i class="fas fa-rupee-sign mr-2"></i> Payment Management
    </h1>

    <!-- Statistics Cards -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
      <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-gray-500 text-sm">Total Revenue</p>
            <p class="text-2xl font-bold text-green-600">₹<%= totalRevenue.toFixed(2) %></p>
          </div>
          <i class="fas fa-rupee-sign text-green-600 text-3xl"></i>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-gray-500 text-sm">Completed</p>
            <p class="text-2xl font-bold text-green-600"><%= completedPayments %></p>
          </div>
          <i class="fas fa-check-circle text-green-600 text-3xl"></i>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-gray-500 text-sm">Pending</p>
            <p class="text-2xl font-bold text-yellow-600"><%= pendingPayments %></p>
          </div>
          <i class="fas fa-clock text-yellow-600 text-3xl"></i>
        </div>
      </div>

      <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-gray-500 text-sm">Failed</p>
            <p class="text-2xl font-bold text-red-600"><%= failedPayments %></p>
          </div>
          <i class="fas fa-times-circle text-red-600 text-3xl"></i>
        </div>
      </div>
    </div>

    <!-- Payments Table -->
    <div class="bg-white rounded-lg shadow-md overflow-hidden">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Order ID</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">User</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Book</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Amount</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Date</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% if (payments && payments.length > 0) { %>
              <% payments.forEach(payment => { %>
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-mono text-gray-900">
                    <%= payment.razorpayOrderId.substring(0, 20) %>...
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-medium text-gray-900"><%= payment.user ? payment.user.name : 'N/A' %></div>
                    <div class="text-sm text-gray-500"><%= payment.user ? payment.user.email : 'N/A' %></div>
                  </td>
                  <td class="px-6 py-4">
                    <% if (payment.book) { %>
                      <div class="text-sm font-medium text-gray-900"><%= payment.book.title %></div>
                      <div class="text-sm text-gray-500">by <%= payment.book.author %></div>
                    <% } else { %>
                      <span class="text-gray-400">Book not found</span>
                    <% } %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-bold text-gray-900">₹<%= payment.amount.toFixed(2) %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <% if (payment.status === 'completed') { %>
                      <span class="bg-green-100 text-green-800 text-xs px-2 py-1 rounded font-semibold">
                        <i class="fas fa-check-circle mr-1"></i> Completed
                      </span>
                    <% } else if (payment.status === 'pending') { %>
                      <span class="bg-yellow-100 text-yellow-800 text-xs px-2 py-1 rounded font-semibold">
                        <i class="fas fa-clock mr-1"></i> Pending
                      </span>
                    <% } else { %>
                      <span class="bg-red-100 text-red-800 text-xs px-2 py-1 rounded font-semibold">
                        <i class="fas fa-times-circle mr-1"></i> Failed
                      </span>
                    <% } %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= new Date(payment.createdAt).toLocaleDateString() %>
                    <br>
                    <span class="text-xs"><%= new Date(payment.createdAt).toLocaleTimeString() %></span>
                  </td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="6" class="px-6 py-4 text-center text-gray-500">No payments found</td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </main>

  <script src="/js/main.js"></script>
</body>
</html>
