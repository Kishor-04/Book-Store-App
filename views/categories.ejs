<%- include('partials/head') %>
<body class="bg-gray-50">
  <%- include('partials/navbar') %>

  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <%- include('partials/messages') %>

    <h1 class="text-3xl font-bold text-gray-800 mb-8">
      <i class="fas fa-th-large mr-3"></i> Book Categories
    </h1>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
      <% if (categories && categories.length > 0) { %>
        <% categories.forEach(cat => { %>
          <div class="bg-white rounded-lg shadow-md hover:shadow-xl transition p-6 text-center">
            <div class="text-4xl mb-3"><%= cat.icon %></div>
            <h3 class="font-bold text-lg text-gray-800 mb-2"><%= cat.name %></h3>
            <% if (cat.description) { %>
              <p class="text-gray-600 text-sm mb-3"><%= cat.description %></p>
            <% } %>
            <p class="text-blue-600 font-semibold">
              <%= cat.bookCount %> <%= cat.bookCount === 1 ? 'Book' : 'Books' %>
            </p>
          </div>
        <% }) %>
      <% } else { %>
        <div class="col-span-full text-center py-12">
          <i class="fas fa-th-large text-gray-400 text-6xl mb-4"></i>
          <p class="text-gray-600 text-xl">No categories available</p>
        </div>
      <% } %>
    </div>
  </main>

  <%- include('partials/footer') %>
  <script src="/js/main.js"></script>
</body>
</html>
