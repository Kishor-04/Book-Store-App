<%- include('../partials/head') %>
<body class="bg-gray-50">
  <%- include('../partials/navbar') %>

  <main class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <%- include('../partials/messages') %>

    <h1 class="text-3xl font-bold text-gray-800 mb-8">
      <i class="fas fa-user mr-3"></i> My Profile
    </h1>

    <div class="bg-white rounded-lg shadow-md p-8">
      <div class="flex items-center mb-8">
        <div class="w-24 h-24 bg-blue-600 rounded-full flex items-center justify-center text-white text-4xl mr-6">
          <i class="fas fa-user"></i>
        </div>
        <div>
          <h2 class="text-2xl font-bold text-gray-800"><%= user.name %></h2>
          <p class="text-gray-600"><%= user.email %></p>
          <p class="text-sm text-gray-500 mt-1">
            Member since <%= new Date(user.createdAt).toLocaleDateString() %>
          </p>
        </div>
      </div>

      <div class="border-t pt-6">
        <h3 class="text-xl font-bold text-gray-800 mb-4">Account Information</h3>
        <div class="space-y-3">
          <div class="flex justify-between py-2 border-b">
            <span class="text-gray-600">Name:</span>
            <span class="font-semibold"><%= user.name %></span>
          </div>
          <div class="flex justify-between py-2 border-b">
            <span class="text-gray-600">Email:</span>
            <span class="font-semibold"><%= user.email %></span>
          </div>
          <div class="flex justify-between py-2 border-b">
            <span class="text-gray-600">Role:</span>
            <span class="font-semibold capitalize"><%= user.role %></span>
          </div>
          <div class="flex justify-between py-2 border-b">
            <span class="text-gray-600">Status:</span>
            <% if (user.isActive) { %>
              <span class="bg-green-100 text-green-800 text-xs px-2 py-1 rounded font-semibold">Active</span>
            <% } else { %>
              <span class="bg-red-100 text-red-800 text-xs px-2 py-1 rounded font-semibold">Inactive</span>
            <% } %>
          </div>
        </div>
      </div>

      <div class="mt-8 flex gap-4">
        <a href="/user/dashboard" class="bg-gray-600 hover:bg-gray-700 text-white font-bold py-2 px-6 rounded-lg transition">
          <i class="fas fa-arrow-left mr-2"></i> Back to Dashboard
        </a>
      </div>
    </div>
  </main>

  <%- include('../partials/footer') %>
  <script src="/js/main.js"></script>
</body>
</html>
