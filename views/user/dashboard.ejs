<%- include('../partials/head') %>
<body class="bg-gray-50">
  <%- include('../partials/navbar') %>

  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <%- include('../partials/messages') %>

    <h1 class="text-3xl font-bold text-gray-800 mb-8">
      <i class="fas fa-tachometer-alt mr-3"></i> My Dashboard
    </h1>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-xl font-bold text-gray-800">Profile</h2>
          <i class="fas fa-user text-blue-600 text-3xl"></i>
        </div>
        <p class="text-gray-600 mb-2">Name: <span class="font-semibold"><%= user.name %></span></p>
        <p class="text-gray-600 mb-4">Email: <span class="font-semibold"><%= user.email %></span></p>
        <a href="/user/profile" class="text-blue-600 hover:text-blue-800">
          <i class="fas fa-edit mr-1"></i> Edit Profile
        </a>
      </div>

      <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-xl font-bold text-gray-800">Quick Links</h2>
          <i class="fas fa-link text-green-600 text-3xl"></i>
        </div>
        <ul class="space-y-2">
          <li>
            <a href="/" class="text-gray-600 hover:text-blue-600">
              <i class="fas fa-home mr-2"></i> Browse Books
            </a>
          </li>
          <li>
            <a href="/categories" class="text-gray-600 hover:text-blue-600">
              <i class="fas fa-th-large mr-2"></i> Categories
            </a>
          </li>
          <li>
            <a href="/help" class="text-gray-600 hover:text-blue-600">
              <i class="fas fa-question-circle mr-2"></i> Help & FAQ
            </a>
          </li>
        </ul>
      </div>

      <div class="bg-white rounded-lg shadow-md p-6">
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-xl font-bold text-gray-800">Account</h2>
          <i class="fas fa-cog text-purple-600 text-3xl"></i>
        </div>
        <p class="text-gray-600 text-sm mb-4">
          Member since: <%= new Date(user.createdAt).toLocaleDateString() %>
        </p>
        <a href="/auth/logout" class="bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded-lg inline-block transition">
          <i class="fas fa-sign-out-alt mr-2"></i> Logout
        </a>
      </div>
    </div>
  </main>

  <%- include('../partials/footer') %>
  <script src="/js/main.js"></script>
</body>
</html>
