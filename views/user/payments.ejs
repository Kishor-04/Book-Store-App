<%- include('../partials/head') %>
<body class="bg-gray-50">
  <%- include('../partials/navbar') %>

  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <%- include('../partials/messages') %>

    <div class="mb-6">
      <a href="/user/dashboard" class="text-blue-600 hover:text-blue-800">
        <i class="fas fa-arrow-left mr-2"></i> Back to Dashboard
      </a>
    </div>

    <h1 class="text-3xl font-bold text-gray-800 mb-8">
      <i class="fas fa-receipt mr-3"></i> My Purchases
    </h1>

    <div class="bg-white rounded-lg shadow-md overflow-hidden">
      <% if (payments && payments.length > 0) { %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Book</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Amount</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Date</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Order ID</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% payments.forEach(payment => { %>
                <tr>
                  <td class="px-6 py-4">
                    <% if (payment.book) { %>
                      <div class="flex items-center gap-3">
                        <div class="w-12 h-16 bg-gradient-to-br from-blue-400 to-indigo-600 rounded flex items-center justify-center flex-shrink-0">
                          <% if (payment.book.coverImage) { %>
                            <img src="<%= payment.book.coverImage %>" alt="<%= payment.book.title %>" class="w-full h-full object-cover rounded">
                          <% } else { %>
                            <i class="fas fa-book text-white text-xl"></i>
                          <% } %>
                        </div>
                        <div>
                          <div class="font-semibold text-gray-900"><%= payment.book.title %></div>
                          <div class="text-sm text-gray-500"><%= payment.book.author %></div>
                        </div>
                      </div>
                    <% } else { %>
                      <span class="text-gray-400">Book not available</span>
                    <% } %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="text-lg font-bold text-green-600">â‚¹<%= payment.amount.toFixed(2) %></span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <% if (payment.status === 'completed') { %>
                      <span class="bg-green-100 text-green-800 text-xs px-3 py-1 rounded-full font-semibold">
                        <i class="fas fa-check-circle mr-1"></i> Completed
                      </span>
                    <% } else if (payment.status === 'pending') { %>
                      <span class="bg-yellow-100 text-yellow-800 text-xs px-3 py-1 rounded-full font-semibold">
                        <i class="fas fa-clock mr-1"></i> Pending
                      </span>
                    <% } else { %>
                      <span class="bg-red-100 text-red-800 text-xs px-3 py-1 rounded-full font-semibold">
                        <i class="fas fa-times-circle mr-1"></i> Failed
                      </span>
                    <% } %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= new Date(payment.createdAt).toLocaleDateString() %>
                    <br>
                    <span class="text-xs"><%= new Date(payment.createdAt).toLocaleTimeString() %></span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-xs font-mono text-gray-600">
                    <%= payment.razorpayOrderId.substring(0, 20) %>...
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      <% } else { %>
        <div class="text-center py-12">
          <i class="fas fa-shopping-cart text-gray-400 text-6xl mb-4"></i>
          <p class="text-gray-600 text-xl mb-6">No purchases yet</p>
          <a href="/" class="inline-block bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg transition">
            <i class="fas fa-book mr-2"></i> Start Shopping
          </a>
        </div>
      <% } %>
    </div>
  </main>

  <%- include('../partials/footer') %>
  <script src="/js/main.js"></script>
</body>
</html>
