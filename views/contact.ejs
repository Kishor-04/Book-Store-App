<%- include('partials/head') %>
<body class="bg-gray-50">
  <%- include('partials/navbar') %>

  <main class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <%- include('partials/messages') %>

    <div class="bg-white rounded-lg shadow-md p-8">
      <h1 class="text-3xl font-bold text-gray-800 mb-6">
        <i class="fas fa-envelope mr-3"></i> Contact Us
      </h1>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
        <div>
          <h2 class="text-xl font-bold text-gray-800 mb-4">Get in Touch</h2>
          <form class="space-y-4">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Name</label>
              <input type="text" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500" />
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Email</label>
              <input type="email" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500" />
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Message</label>
              <textarea rows="4" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500"></textarea>
            </div>
            <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-6 rounded-lg transition">
              <i class="fas fa-paper-plane mr-2"></i> Send Message
            </button>
          </form>
        </div>

        <div>
          <h2 class="text-xl font-bold text-gray-800 mb-4">Contact Information</h2>
          <div class="space-y-4">
            <div class="flex items-start">
              <i class="fas fa-map-marker-alt text-blue-600 text-xl mr-3 mt-1"></i>
              <div>
                <h3 class="font-semibold">Address</h3>
                <p class="text-gray-600">123 Book Street, Reading City, RC 12345</p>
              </div>
            </div>
            <div class="flex items-start">
              <i class="fas fa-phone text-blue-600 text-xl mr-3 mt-1"></i>
              <div>
                <h3 class="font-semibold">Phone</h3>
                <p class="text-gray-600">+1 (555) 123-4567</p>
              </div>
            </div>
            <div class="flex items-start">
              <i class="fas fa-envelope text-blue-600 text-xl mr-3 mt-1"></i>
              <div>
                <h3 class="font-semibold">Email</h3>
                <p class="text-gray-600">support@bookstore.com</p>
              </div>
            </div>
            <div class="flex items-start">
              <i class="fas fa-clock text-blue-600 text-xl mr-3 mt-1"></i>
              <div>
                <h3 class="font-semibold">Business Hours</h3>
                <p class="text-gray-600">Mon-Fri: 9AM - 6PM<br>Sat-Sun: 10AM - 4PM</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

  <%- include('partials/footer') %>
  <script src="/js/main.js"></script>
</body>
</html>
